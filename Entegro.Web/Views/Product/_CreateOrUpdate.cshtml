@model ProductViewModel


<div class="col-lg-9 col-12 mb-lg-0 mb-4">
    <div class="card mb-3">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="product-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#form-tabs-general" type="button" role="tab">Genel</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#form-tabs-stock" type="button" role="tab">Stok & Ölçüler</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#form-tabs-seo" type="button" role="tab">SEO</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#form-tabs-image" type="button" role="tab">Görsel</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#form-tabs-categories" type="button" role="tab">Kategoriler</button>
                </li>
            </ul>
        </div>

        <div class="tab-content">
            <!-- GENEL -->
            <div class="tab-pane fade show active" id="form-tabs-general" role="tabpanel">
                <div class="row g-3 p-3">
                    @if (Model.Id > 0)
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    <input type="hidden" asp-for="Description" id="description-value" />



                    <!-- Ürün Adı -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Name">Ad</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name" })
                            </div>
                        </div>
                    </div>



                    <!-- Ürün Kodu -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Code">Ürün Kodu</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @id = "Code" })
                            </div>
                        </div>
                    </div>

                    <!-- Fiyat -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Price">Fiyat</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @type = "number", step = "0.01", @id = "Price" })
                            </div>
                        </div>
                    </div>

                    <!-- Barkod -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Barcode">Barkod</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Barcode, new { @class = "form-control", @id = "Barcode" })
                            </div>
                        </div>
                    </div>

                    <!-- Marka -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="BrandId">Marka</label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(m => m.BrandId, new SelectList(ViewBag.Brands, "Id", "Name"), new { @class = "form-select", @id = "BrandId" })
                            </div>
                        </div>
                    </div>

                    <!-- Para Birimi -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Currency">Para Birimi</label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(m => m.Currency, new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "TRY", Value = "TRY" },
                                                                new SelectListItem { Text = "USD", Value = "USD" },
                                                                new SelectListItem { Text = "EUR", Value = "EUR" },
                                                                new SelectListItem { Text = "GBP", Value = "GBP" },
                                                                new SelectListItem { Text = "JPY", Value = "JPY" }
                                                                }, new { @class = "form-select", @id = "Currency" })
                            </div>
                        </div>
                    </div>

                    <!-- Birim -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Unit">Birim</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Unit, new { @class = "form-control", @id = "Unit" })
                            </div>
                        </div>
                    </div>

                    <!-- Açıklama -->
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-sm-12">
                                <div id="full-editor">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- STOK & ÖLÇÜLER -->
            <div class="tab-pane fade" id="form-tabs-stock" role="tabpanel">
                <div class="row g-3 p-3">
                    <!-- Stok Miktarı -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="StockQuantity">Stok</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", @type = "number", min = "0", @id = "StockQuantity" })
                            </div>
                        </div>
                    </div>

                    <!-- Ağırlık -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Weight">Ağırlık (kg)</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Weight, new { @class = "form-control", @type = "number", step = "0.01", @id = "Weight" })
                            </div>
                        </div>
                    </div>

                    <!-- Uzunluk -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Length">Uzunluk (cm)</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Length, new { @class = "form-control", @type = "number", step = "0.01", @id = "Length" })
                            </div>
                        </div>
                    </div>

                    <!-- Genişlik -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Width">Genişlik (cm)</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Width, new { @class = "form-control", @type = "number", step = "0.01", @id = "Width" })
                            </div>
                        </div>
                    </div>

                    <!-- Yükseklik -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="Height">Yükseklik (cm)</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Height, new { @class = "form-control", @type = "number", step = "0.01", @id = "Height" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="row align-items-center">
                            <label class="col-sm-3 col-form-label text-sm-start" for="VatInc">KDV Dahil</label>
                            <div class="col-sm-9">
                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.VatInc, new { @class = "form-check-input", @id = "VatInc" })
                                    <label class="form-check-label" for="VatInc">Evet</label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- KDV Oranı (Dropdown) -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="VatRate">KDV Oranı (%)</label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(
                                                                m => m.VatRate,
                                                                new List<SelectListItem> {
                                                                new SelectListItem { Text = "%20", Value = "20.00" },
                                                                new SelectListItem { Text = "%18", Value = "18.00" },
                                                                new SelectListItem { Text = "%8",  Value = "8.00"  },
                                                                new SelectListItem { Text = "%1",  Value = "1.00"  }
                                                                },
                                                                "--Seçiniz--",
                                                                new { @class = "form-select", @id = "VatRate" }
                                                                )
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- SEO -->
            <div class="tab-pane fade" id="form-tabs-seo" role="tabpanel">
                <div class="row g-3 p-3">
                    <!-- Meta Başlık -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="MetaTitle">Meta Başlık</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.MetaTitle, new { @class = "form-control", @id = "MetaTitle" })
                            </div>
                        </div>
                    </div>

                    <!-- Anahtar Kelimeler -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="MetaKeywords">Anahtar Kelimeler</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.MetaKeywords, new { @class = "form-control", @id = "MetaKeywords" })
                            </div>
                        </div>
                    </div>

                    <!-- Meta Açıklama -->
                    <div class="col-md-12">
                        <div class="row">
                            <label class="col-sm-3 col-form-label text-sm-start" for="MetaDescription">Meta Açıklama</label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(m => m.MetaDescription, new { @class = "form-control", rows = 3, @id = "MetaDescription" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- GÖRSEL -->
            <div class="tab-pane fade" id="form-tabs-image" role="tabpanel">
                <div class="row g-3 p-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="dropzone needsclick" id="dropzone-multi">
                                    <div class="dz-message needsclick">
                                        Dosyaları buraya sürükleyin veya yüklemek için tıklayın
                                    </div>
                                    <div class="fallback">
                                        <input name="file" type="file" multiple />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Id > 0)
            {
                <!--KATEGORİ-->
                <div class="tab-pane fade" id="form-tabs-categories" role="tabpanel">
                    <div class="row g-3 p-3">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editUser">
                               Ürün Kategorisi Ekle
                            </button>
                            <div class="card mt-3">
                                <h5 class="card-header">Table Basic</h5>
                                <div class="table-responsive text-nowrap">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Project</th>
                                                <th>Client</th>
                                                <th>Users</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-border-bottom-0">
                                            <tr>
                                                <td>
                                                    <i class="ti ti-brand-angular ti-lg text-danger me-3"></i> <strong>Angular Project</strong>
                                                </td>
                                                <td>Albert Cook</td>
                                                <td>
                                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                                        <li data-bs-toggle="tooltip"
                                                            data-popup="tooltip-custom"
                                                            data-bs-placement="top"
                                                            class="avatar avatar-xs pull-up"
                                                            title="Lilian Fuller">
                                                            <img src="../../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                                                        </li>
                                                        <li data-bs-toggle="tooltip"
                                                            data-popup="tooltip-custom"
                                                            data-bs-placement="top"
                                                            class="avatar avatar-xs pull-up"
                                                            title="Sophia Wilkerson">
                                                            <img src="../../assets/img/avatars/6.png" alt="Avatar" class="rounded-circle" />
                                                        </li>
                                                        <li data-bs-toggle="tooltip"
                                                            data-popup="tooltip-custom"
                                                            data-bs-placement="top"
                                                            class="avatar avatar-xs pull-up"
                                                            title="Christina Parker">
                                                            <img src="../../assets/img/avatars/7.png" alt="Avatar" class="rounded-circle" />
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td><span class="badge bg-label-primary me-1">Active</span></td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                            <i class="ti ti-dots-vertical"></i>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" href="javascript:void(0);"><i class="ti ti-pencil me-1"></i> Edit</a>
                                                            <a class="dropdown-item" href="javascript:void(0);"><i class="ti ti-trash me-1"></i> Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="modal fade" id="editUser" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-simple modal-edit-user modal-dialog-centered">
                        <div class="modal-content p-3 p-md-5">
                            <div class="modal-body">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                <div class="text-center mb-4">
                                    <h3 class="mb-2">Ürün Kategorisi Ekle</h3>
                                   
                                </div>
                                <form id="editUserForm" class="row g-3" onsubmit="return false">
                                    <div class="col-md-12 mt-3">
                                        <div class="row">
                                            <label class="col-sm-3 col-form-label text-sm-start" for="CategoryId">Kategori</label>
                                            <div class="col-sm-9">
                                                <select id="CategoryId"
                                                        name="CategoryId"
                                                        class="select2 form-select form-select-lg"
                                                        data-value="@Model?.CategoryId">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mt-3">
                                        <div class="row">
                                            <label class="col-sm-3 col-form-label text-sm-start" for="DisplayOrder">Sıra</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", @id = "DisplayOrder", @type = "number", @value = 0 })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center mt-3">
                                        <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                                        <button type="reset"
                                                class="btn btn-label-secondary"
                                                data-bs-dismiss="modal"
                                                aria-label="Close">
                                            Cancel
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

